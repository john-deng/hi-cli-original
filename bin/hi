if [ "${HI_CLI_HOME}" == "" ]; then
  echo ""
  echo "Warning:"
  echo "Please install hi-cli first!"
  echo "cd /path/to/hi-cli/bin"
  echo "./install"
  exit
fi

plugin_name=$1
plugin_action=$2

source ${HI_CLI_HOME}/bin/colors
source ${HI_CLI_HOME}/bin/clap
source ${HI_CLI_HOME}/bin/logging
source ${HI_CLI_HOME}/bin/version
source ${HI_CLI_HOME}/bin/usage

app="hi"

#log_info "Running: ${CMD_LINE}"

function main() {
  

  default_plugin="${HI_CLI_HOME}/bin/${plugin_name}/${plugin_action}"
  custom_plugin="${HI_CLI_HOME}/plugins/${plugin_name}/${plugin_action}"
  if [ -f "${default_plugin}" ]; then
    echo "default_plugin: $default_plugin"
    source "${default_plugin}"
  elif [ -f "${custom_plugin}" ]; then
    source "${custom_plugin}"
  else
    show_hi_usage
    exit
  fi

  result=0
  cli=${cli}
  run result cli

  if [ ${result} == 0 ]; then
    log_info "${cli} : success"
  else
    log_error "${cli} : fail" "no-debug"
  fi
  
  exit 0
}
show_version
main
