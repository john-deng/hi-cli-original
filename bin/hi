export ver="0.0.1"

if [ "${HI_CLI_HOME}" == "" ]; then
  echo ""
  echo "Warning:"
  echo "Please install hi-cli first!"
  echo "cd /path/to/hi-cli/bin"
  echo "./install"
  exit
fi

plugin_name=$1
plugin_action=$2

source ${HI_CLI_HOME}/bin/colors
source ${HI_CLI_HOME}/bin/clap
source ${HI_CLI_HOME}/bin/logging

app="hi-cli"

log_info "Running: ${CMD_LINE}"

function show_version() {
  echo ""
  echo "${app} version: $ver"
  echo "${app} is the client tool for simplifying shell commands"
}

function show_hi_usage() {

  show_version

  echo "
usages:
  ${app} plugin-name plugin-action arguments
  ${app} mvn rebuild
"
}

function main() {
  if [ -f "${HI_CLI_HOME}/bin/${plugin_name}/${plugin_action}" ]; then
    bash ${HI_CLI_HOME}/bin/${plugin_name}/${plugin_action}
  elif [ -f "${HI_CLI_HOME}/plugins/${plugin_name}/${plugin_action}" ]; then
    bash ${HI_CLI_HOME}/plugins/${plugin_name}/${plugin_action}
  else
    show_hi_usage
  fi

  exit 0
}
main
