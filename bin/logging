source "${HI_CLI_HOME}/bin/init"
source "${HI_CLI_HOME}/bin/colors"

function log_debug() {
	if [ "${debug}" == "debug" ]; 
	then
		${ECHO_E} "${TEAL}[hi-cli] [LINE: ${BASH_LINENO[*]}] $1 ${ENDCOLOR}"	
	fi
}

function log_base()
{
	${ECHO_E} "$2[hi-cli] $1 ${ENDCOLOR}"
}

function log_info()
{
	log_base "$1" "${GREEN}"
}

function log_trace()
{
	log_base "$1" "${TEAL}"
}

function log_warn()
{
	log_base "$1" "${YELLOW}"
}

function log_error()
{
	if [ "$2" == "no-debug" ]; then
	  log_base "$1" "${RED}"
	else
	  log_base "[LINE: ${BASH_LINENO[*]}] $1" "${RED}"
	fi
}

